{
  "name": "In-Browser Test Automator",
  "version": "1.0.0",
  "description": "Set up and run quick UI tests, while staying in your browser.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "blue_play_button.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "icons": {
    "128": "blue_play_button.png"
  },
  "manifest_version": 2
}
